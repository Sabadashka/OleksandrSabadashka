def add():
    a = []
    while True:
        try:
            n = int(input('Ведіть розмірність масиву '))
            if n == 0:
                print('\nВедіть число відміне від 0 ')
                continue
            if n < 0:
                print('\nВедіть число більше від 0 ')
                continue
            break
        except ValueError:
            print('\nВведіть число')
    for i in range(n):
        a.append(int(input('Введіть число масива: ')))
    print(a)
    return a

def Sort(a, key=lambda x: x):
    t = True
    for i, el in enumerate(a[1:]):
        if key(el) > key(a[i]):
            t = True
        else:
            t = False
            break

    if t:
        res = 1
        for i in range(len(a)-1):
            res = res * (a[i+1]- a[i])
        print(res)

    else:
        sum = 0
        for i in a:
            if i > 0:
               sum += i
        print(sum)

a = add()
b = Sort(a)

