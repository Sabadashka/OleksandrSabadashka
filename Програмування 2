n = (int(input("Введіть n: ")))
a = [[0] * n for i in range(n)]
for i in range(n):
    for j in range(n):
        if i < j:
            a[i][j] = 0
        elif i > j:
            a[i][j] = 0
        else:
            a[i][j] = (i+1)*(i+2)
for row in a:
    print(' '.join([str(elem) for elem in row]))
