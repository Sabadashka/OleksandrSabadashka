def check_k():
    while True:
        try:
            k = int(input("Enter k: "))
            break
        except ValueError:
            print('\nВведіть число!!!')
            continue
    return k


def check_n():
    while True:
        try:
            n = int(input("Enter n: "))
            break
        except ValueError:
            print('\nВведіть число!!!')
            continue
    return n


result = 0


def Jump(n):
    global result
    i = 1
    # виконуємо цикл поки і менше к
    while i <= k:
        # якщо i менше n, то викликаємо цю ж функцію рекурсивно
        if i < n:
            Jump(n - i)
        else:
            # інакше збільшеємо результат на 1
            result += 1
            # повертаємо результат
            return
        i += 1
    return result


k = check_k()
n = check_n()
Jump(n)
print(result)
